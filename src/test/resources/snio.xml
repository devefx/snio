<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:snio="http://www.devefx.org/schema/snio"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.devefx.org/schema/snio
        http://www.devefx.org/schema/snio/spring-snio-1.0.xsd">

    <!-- 自定义会话管理器 -->
    <bean id="redisSessionManager" class="org.devefx.snio.session.redis.RedisSessionManager">
        <property name="host" value="192.168.3.6"/>
        <property name="port" value="6388"/>
        <property name="database" value="0"/>
        <property name="maxInactiveInterval" value="60"/>
        <property name="password" value="redispwd"/>
    </bean>

    <!-- 服务器引擎 -->
    <snio:engine id="engine" host="localhost" auto-start="true" manager-ref="redisSessionManager">
        <!-- tcp服务器 -->
        <snio:udp name="udp-server" port="7777">
            <snio:decoder class="org.devefx.snio.codec.ByteArrayDecoder"/>
            <snio:services>
                <snio:service class="snio.service.LoginService"/>
                <snio:service class="snio.service.LoginService"/>
            </snio:services>
        </snio:udp>
        <!-- udp服务器 -->
        <snio:tcp name="tcp-server" port="8888">
            <snio:decoder class="org.devefx.snio.codec.ByteArrayDecoder"/>
            <snio:services>
                <snio:service class="snio.service.LoginService"/>
                <snio:service class="snio.service.LoginService"/>
            </snio:services>
        </snio:tcp>
    </snio:engine>

</beans>